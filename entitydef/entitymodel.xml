<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/entitymodel.xsd">
    <!-- ========================================================= -->
    <!-- ======================== Defaults ======================= -->
    <!-- ========================================================= -->
    <title>Entity of OfbizDemo Component</title>
    <description>None</description>
    <copyright></copyright>
    <version>1.0</version>
<!--    <default-resource-name>DummyOrderLabel</default-resource-name>-->


<!--    Custom made entities defined -->

    <entity entity-name="NewOrderHeader" package-name="org.apache.ofbiz.ofbizDemo" title="NewOrderHeader Entity" >
        <field name="orderId" type="id" ><description>Primary sequence ID</description></field>
        <field name="statusId" type="id" />
        <field name="orderDate" type="date-time" />
        <field name="orderName" type="name" />
        <field name="description" type="description" />
        <field name="grandTotal" type="numeric" />

        <prim-key field="orderId"/>

<!--        <relation type="one" fk-name="STATUS_TYP" rel-entity-name="NewOrderStatus">-->
<!--            <key-map field-name="statusId" rel-field-name="statusId" />-->
<!--        </relation>-->
<!--        <relation type="one" fk-name="ORDER_HDR" rel-entity-name="NewOrderStatus">-->
<!--            <key-map field-name="orderId"/>-->
<!--        </relation>-->
    </entity>

    <entity entity-name="NewOrderItem" package-name="org.apache.ofbiz.ofbizDemo" title="New Order Item Entity">
        <field name="orderId" type="id"/>
        <field name="orderItemSeqId" type="id"> <description>secondary seq id</description></field>
        <field name="quantity" type="numeric" />
        <field name="amount" type="floating-point"/>

        <prim-key field="orderId"/>
        <prim-key field="orderItemSeqId"/>

        <relation type="one" fk-name="ORDER_HDR_ID" rel-entity-name="NewOrderHeader">
            <key-map field-name="orderId" />
        </relation>
    </entity>

    <entity entity-name="NewOrderStatus" package-name="org.apache.ofbiz.ofbizDemo" title="New Order Status">
        <field name="orderStatusId" type="id"/>
        <field name="orderId" type="id"/>
        <field name="orderItemSeqId" type="id"/>
        <field name="statusId" type="id" />

        <prim-key field="statusId"/>

        <relation type="one" fk-name="ORDER_HDR" rel-entity-name="NewOrderHeader">
            <key-map field-name="orderId"/>
        </relation>
        <relation type="one" fk-name="ORDER_ITEM" rel-entity-name="NewOrderItem">
            <key-map field-name="orderId"/>
            <key-map field-name="orderItemSeqId"/>
        </relation>
    </entity>



</entitymodel>